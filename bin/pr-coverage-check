#!/usr/bin/env php
<?php

include $_composer_autoload_path ?? __DIR__ . '/../vendor/autoload.php';

use Symfony\Component\Console\Application;

$application = new Application();

$application->add(
    new \BitBucketPRCoverage\PrCoverageCheckerCommand(
        new \BitBucketPRCoverage\Coverage\Parser()
    )
);

$application->run();
